                    </exclusion>
                    <exclusion>
                        <groupId>org.wildfly</groupId>
                        <artifactId>wildfly-naming</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.wildfly</groupId>
                        <artifactId>wildfly-server</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>org.wildfly</groupId>
                <artifactId>wildfly-clustering-infinispan-marshalling</artifactId>
                <version>${version.org.wildfly}</version>
            </dependency>
            <dependency>
                <groupId>org.wildfly</groupId>
